<aside class="sidebar sidebar-default navs-rounded">
    {{> admin/sidebar}}
</aside>

<main class="main-content">
    {{> navbar}}
    <div class="container-fluid content-inner pb-0">
        <!-- آمار کلی -->
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">تعداد کاربران</h5>
                                <h3 class="mb-0">{{totalUsers}}</h3>
                            </div>
                            <div class="icon bg-primary">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">تراکنش‌های امروز</h5>
                                <h3 class="mb-0">{{todayTransactions}}</h3>
                            </div>
                            <div class="icon bg-warning">
                                <i class="fas fa-exchange-alt"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">گردش مالی</h5>
                                <h3 class="mb-0">{{totalVolume}} تومان</h3>
                            </div>
                            <div class="icon bg-success">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- جدول تراکنش‌های اخیر -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">تراکنش‌های اخیر</h4>
                        <a href="/admin/transactions" class="btn btn-primary btn-sm">مشاهده همه</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>کاربر</th>
                                        <th>نوع</th>
                                        <th>مبلغ</th>
                                        <th>وضعیت</th>
                                        <th>تاریخ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each recentTransactions}}
                                    <tr>
                                        <td>{{this.userName}}</td>
                                        <td>{{this.type}}</td>
                                        <td>{{formatNumber this.amount}} تومان</td>
                                        <td>
                                            <span class="badge bg-{{this.statusColor}}">{{this.status}}</span>
                                        </td>
                                        <td>{{formatDate this.date}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>